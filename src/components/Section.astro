---
const { color, colorButton, title, subtitle } = Astro.props
const textColor = `text-${color}`
const textColorButton = `text-${colorButton}`
---

<section class=`landing-section relative w-full h-screen ${textColor} overflow-hidden` data-header-color={color}>
  <div class="flex flex-col items-center mt-20 w-screen h-screen text-center lg:mt-32">
    <h2 class="px-12 pb-2 text-4xl font-semibold lg:text-6xl">{title}</h2>
    <p class="text-base">{subtitle}</p>
    <div class="absolute flex flex-col bottom-0 mb-16 lg:flex-row">
      <slot name="buttons" />
      <a class="mb-4 py-2 px-14 text-base font-semibold text-[#171a20a6]	bg-[#f4f4f4cc] transition delay-150 hover:text-[#f4f4f4cc] hover:bg-[#171a20a6] lg:mb-0 lg:mr-8 lg:w-[250px]" href="#">Explore Inventory</a>
      <a class="py-2 px-14 text-base font-semibold text-[#f4f4f4cc]	bg-[#171a20a6] transition delay-150 hover:text-[#171a20a6] hover:bg-[#f4f4f4cc] lg:w-[250px]" href="#">Custom Order</a>
    </div>
  </div>

  <div class="absolute top-0 bottom-0 h-full -z-10">
    <slot name="background" />
  </div>
  
</section>